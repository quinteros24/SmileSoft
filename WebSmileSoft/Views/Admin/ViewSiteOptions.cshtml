<h5 class="text-primary">Opciones del Sitio</h5>
<hr />
<div class="card shadow mb-3">
    <div class="card-header py-3">
        <p class="text-primary m-0 fw-bold">Logos</p>
    </div>
    <div class="card-body">
        <div class="row">
            <div class="col-md-6" style="display:none;">
                <form>
                    @* NO CAMBIAR ESTRUCTURA DE ELEMENTOS, LOS DATOS SE OBTIENEN SEGÚN SU ESTRUCTURA *@
                    <div class="mb-3">
                        <label for="ChangeLogo" class="form-label"><span id="ChangeLogoLabel">Cambiar Logo del Login</span></label>
                        <input class="form-control" type="file" id="ChangeLogo" accept=".jpg, .png" onchange="fnConvertToBase64(this)">
                        <div class="mb-3 my-2 "><button class="btn btn-primary" type="submit" onclick="uploadImage(this, 1)">Subir</button></div>

                    </div>
                </form>
            </div>
            <div class="col-md-12">
                <form>
                    <div class="mb-3">
                        <label for="logoInput" class="form-label">Cambiar Logo Menu Principal</label>
                        <input class="form-control" type="file" id="logoInput" accept=".jpg, .png" onchange="fnConvertToBase64(this)">
                        <div class="mb-3 my-2">
                            <button class="btn btn-primary mx-4" type="button" id="updateLogo" onclick="uploadImage(this, 2)">Subir</button><span class="text-primary">*Tamaño recomendado de 140x70px*</span>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
<div class="card shadow mb-3">
    <div class="card-header py-3">
        <p class="text-primary m-0 fw-bold">Colores</p>
    </div>
    <div class="card-body">
        <div class="row ">
            <div class="col-md-4" style="display:none;">
                <div class="card-body shadow align-content-center justify-content-center text-center">
                    <form>
                        <div class="form-group mx-auto">
                            <label for="BackgroundColor" class="form-label"> Cambiar Color Fondo del Sitio</label>
                            <input type="color" class="form-control form-control-color mx-auto" id="BackgroundColor" value="#563d7c" title="Escoger Color" style="width: 6.5rem;">
                            <button type="button" class="btn btn-primary my-2 " onclick="fnUpdateDataOffice(3)">
                                Actualizar
                            </button>
                        </div>
                    </form>
                </div>
            </div>
            <div class="col-md-6 mb-3">
                <div class="card-body shadow align-content-center justify-content-center text-center">
                    <form>
                        <div class="form-group mx-auto">
                            <label for="SidebarColor">Cambiar Color de la Barra Lateral</label>
                            <input type="color" class="form-control form-control-color mx-auto" id="SidebarColor" value="#be1522" title="Escoger Color" style="width: 6.5rem;" />
                            <button type="button" class="btn btn-primary my-2 " onclick="fnUpdateDataOffice(5)">
                                Actualizar
                            </button>
                        </div>
                    </form>
                </div>
            </div>
            <div class="col-md-6 mb-3">
                <div class="card-body shadow align-content-center justify-content-center text-center">
                    <form>
                        <div class="form-group">
                            <label for="NavbarColor">Cambiar Color de la Barra Superior</label>
                            <input type="color" class="form-control form-control-color mx-auto" id="NavbarColor" value="#be1522" title="Escoger Color" style="width: 6.5rem;" />

                            <button type="button" class="btn btn-primary my-2 " onclick="fnUpdateDataOffice(4)">
                                Actualizar
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
