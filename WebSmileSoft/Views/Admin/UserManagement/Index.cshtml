@{
ViewData["Title"] = "User Management";
}
@{
    <div class="container text-white bg-primary border rounded border-0 p-4 p-lg-5 py-4 py-xl-5">
        <div class="row mb-5">
            <div class="col-md-8 col-xl-6 text-center mx-auto">
                <h2 class="text-white">Administración de Usuarios</h2>
            </div>
        </div>
        <div class="row gy-4 row-cols-1 row-cols-md-2 row-cols-xl-3">
            <div class="col">
                <div class="d-flex justify-content-xxl-center">
                    <div class="px-3">
                        <h2 class="text-white d-xxl-flex justify-content-xxl-center">Usuarios | Pacientes</h2><a asp-action="TableUsers" asp-controller="Admin">
                            <p><img class="rounded img-fluid" data-bss-hover-animate="pulse" width="300" src="~/assets/img/profiles/user_profile.png" alt="User Profile img"></p>
                        </a>
                    </div>
                </div>
            </div>
            <div class="col">
                <div class="d-flex justify-content-xxl-center">
                    <div class="px-3">
                        <h2 class="text-white d-xxl-flex justify-content-xxl-center">Odontologos</h2><a asp-action="TableUsers" asp-controller="Admin">
                            <p><img class="rounded img-fluid d-xxl-flex justify-content-xxl-center" data-bss-hover-animate="pulse" width="300" src="~/assets/img/profiles/doctor_profile.png" alt="Dentist Profile img"></p>
                        </a>
                    </div>
                </div>
            </div>
            <div class="col">
                <div class="d-flex justify-content-xxl-center">
                    <div class="px-3">
                        <h2 class="text-white d-xxl-flex justify-content-xxl-center">Administradores</h2><a asp-action="TableUsers" asp-controller="Admin">
                            <p><img class="rounded img-fluid d-xxl-flex justify-content-xxl-center" data-bss-hover-animate="pulse" width="300" src="~/assets/img/profiles/admin_profile.png" alt="Admin Profile img"></p>
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
}

                @section Scripts{
