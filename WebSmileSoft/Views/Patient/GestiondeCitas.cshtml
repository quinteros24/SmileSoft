<div class="container mt-5">
    <h1 class="mb-4">Gestión de Citas</h1>

    <!-- Lista de Citas -->
    <div class="card">
        <div class="card-header">
            Próximas Citas
        </div>
        <div class="card-body">
            <table class="table">
                <thead>
                    <tr>
                        <th>Fecha</th>
                        <th>Hora</th>
                        <th>Médico</th>
                        <th>Estado</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>2023-08-15</td>
                        <td>10:00 AM</td>
                        <td>Dr. Pérez</td>
                        <td>Pendiente</td>
                    </tr>
                    <tr>
                        <td>2023-08-20</td>
                        <td>03:30 PM</td>
                        <td>Dr. González</td>
                        <td>Confirmada</td>
                    </tr>
                    <!-- Agrega más filas según las citas del paciente -->
                </tbody>
            </table>
        </div>
    </div>

    <!-- Formulario para Agendar Cita -->
    <div class="card mt-4">
        <div class="card-header">
            Agendar Cita
        </div>
        <div class="card-body">
            <form>
                <div class="form-group">
                    <label for="fecha">Fecha</label>
                    <input type="date" class="form-control" id="fecha" required>
                </div>
                <div class="form-group">
                    <label for="hora">Hora</label>
                    <input type="time" class="form-control" id="hora" required>
                </div>
                <div class="form-group">
                    <label for="medico">Médico</label>
                    <select class="form-control" id="medico" required>
                        <option value="">Seleccionar</option>
                        <option value="Dr. Pérez">Dr. Pérez</option>
                        <option value="Dr. González">Dr. González</option>
                        <!-- Agrega más opciones para otros médicos -->
                    </select>
                </div>
                <button type="submit" class="btn btn-primary">Agendar Cita</button>
            </form>
        </div>
    </div>
</div>

