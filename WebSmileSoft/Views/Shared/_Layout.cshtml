            // Definir las rutas para los diferentes roles
            var adminRoute = "/Admin/Index";
            var doctorRoute = "/Doctor/Index";
            var userRoute = "/Patient/Index";
            var homeRoute = "/Home/Index";

            // Determinar la ruta según el rol del usuario
            var route;
            if (userRole == 1) {
