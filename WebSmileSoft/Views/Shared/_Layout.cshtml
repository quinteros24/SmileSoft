        function mostrarElementosPorRol(userRole) {
            let divAdmin = $("#divAdmin");
            let divDoctor = $("#divDoctor");
            let divUser = $("#divUser");
            let contenido = $("#page-top");

            divAdmin.hide();
            divDoctor.hide();
            divUser.hide();
            contenido.hide();

            if (userRole == 1) {
                divAdmin.show();
                divDoctor.hide();
                divUser.hide();
            } else if (userRole == 2) {
                divDoctor.show();
            } else if (userRole == 3) {
                divUser.show();
            }

            if (userRole == 1 || userRole == 2 || userRole == 3) {
                contenido.show();
            }
        }
