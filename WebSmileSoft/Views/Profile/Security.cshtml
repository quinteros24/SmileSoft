@{
    ViewData["Title"] = "Seguridad";
}

<h6>Ajustes de Seguridad</h6>
<div class="card-body shadow my-2">
    <form>
        <div class="row">
            <div class="col">
                <div class="mb-3">
                    <label class="form-label" for="NewPassword">
                        <strong>Ingresa Tu Nueva Contraseña</strong>
                    </label>
                    <input class="form-control" type="password" id="NewPassword" placeholder="" name="NewPassword">
                </div>
            </div>
            <div class="col">
                <div class="mb-3">
                    <label class="form-label" for="Repeat_Password">
                        <strong>Confirma la Nueva Contraseña</strong>
                    </label>
                    <input class="form-control" type="password" id="Repeat_Password" placeholder="" name="Repeat_Password">
                </div>
            </div>
        </div>
        <div class="mb-3"><button class="btn btn-primary btn-sm" onclick="ChangeUserPass()" type="submit">Cambiar Contraseña</button> </div>
    </form>
</div>
<hr />
