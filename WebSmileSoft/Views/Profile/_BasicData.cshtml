@{
ViewData["Title"] = "BasicData";
}
@{
    <div class="tab-pane active" id="profile">
        
        <h6>Información de tu Perfil</h6>
        <hr />
        <div class="card shadow mb-3">
            <div class="card-header py-3">
                <p class="text-primary m-0 fw-bold">Datos Personales</p>
            </div>
            <div class="card-body">
                <form>
                    <div class="row">

                        <div class="col">
                            <div class="mb-3"><label class="form-label" for="user_names"><strong>Nombres</strong></label><input class="form-control" type="text" id="user_names" placeholder="Juan Pedro" name="user_names"></div>
                        </div>
                        <div class="col">
                            <div class="mb-3"><label class="form-label" for="user_lastnames"><strong>Apellidos</strong></label><input class="form-control" type="text" id="user_lastnames" placeholder="Sanchez ramirez" name="user_lastnames"></div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col">
                            <div class="mb-3"><label class="form-label" for="tipo_documento"><strong>Tipo Documento</strong></label><input class="form-control" type="text" id="tipo_documento" placeholder="C.C." name="tipo_documento" disabled></div>
                        </div>
                        <div class="col">
                            <div class="mb-3"><label class="form-label" for="id_number"><strong>Identificación</strong></label><input class="form-control" type="text" id="id_number" placeholder="1088313131" name="id_number" disabled></div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <div class="input-group">
                                <span class="input-group-text">Fecha de nacimiento</span>
                                <input type="date" id="birthDate" class="form-control " />
                            </div>
                        </div>

                        <div class="col-md-6 mb-3">
                            <!-- Masculino
                            Femenino
                            No binario
                            Género fluido
                            Agénero
                            Transgénero
                            Cisgénero
                            Intersexuales
                            Otro-->
                            <div class="input-group" id="genderOptions">
                                <label class="input-group-text" for="genderSelect">Género</label>
                                <select class="form-select" id="genderSelect">
                                    <option selected disabled>Seleccionar</option>
                                    <option value="masculino">Masculino</option>
                                    <option value="femenino">Femenino</option>
                                    <option value="otros">Otro</option>
                                </select>
                            </div>
                        </div>
                    </div>
                    <hr />
                    <div class="mb-3"><button class="btn btn-primary btn-sm btn-en-desarrollo" type="submit">Actualizar Datos</button></div>
                </form>
            </div>
        </div>
        <div class="card shadow my-3">
            <div class="card-header py-3">
                <p class="text-primary m-0 fw-bold">Datos de contacto</p>
            </div>
            <div class="card-body">
                <form>
                    <div class="row">
                        <div class="mb-3"><label class="form-label" for="address"><strong>Correo Electronico </strong></label><input class="form-control" type="email" id="email" placeholder="emilio@smilesoft.com" name="email"></div>
                    </div> <div class="row">
                        <div class="mb-3"><label class="form-label" for="address"><strong>Dirección </strong></label><input class="form-control" type="text" id="address" placeholder="Sunset Blvd, 38" name="address"></div>
                    </div>
                    <div class="row">
                        <div class="col">
                            <div class="mb-3"><label class="form-label" for="phone_number"><strong>Numero Celular</strong></label><input class="form-control" type="text" id="phone_number" placeholder="3024214750" name="phone_number"></div>
                        </div>
                        
                        @*<div class="card-body">
                    <div class="row">
                    <div class="col-md-12">
                    <form>
                    <div class="mb-3">
                    <div class="form-check form-switch">
                    <input class="form-check-input" type="checkbox" id="formCheck-2" required>
                    <label class="form-check-label" for="formCheck-2">
                    <strong>Acepto los términos y condiciones de uso de los datos registrados en este sitio.</strong>
                    </label>
                    </div>
                    </div>

                    </form>
                    </div>
                    </div>
                    </div>*@
                    </div>

                    <div class="mb-3"><button class="btn btn-primary btn-sm btn-en-desarrollo" type="submit">Actualizar Datos</button></div>
                </form>
            </div>
        </div>
        <!-- Datos de Estudios Solo PERFIL DE DOCTOR -->
        @*if (User.IsInRole("Doctor"))
    {*@
        <partial name="_Especialidades" />
        @*}*@
    </div>
}

