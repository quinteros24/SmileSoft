@{
    ViewData["Title"] = "MedicalData";
}
@{
        <h6>Información Medica</h6>
        <hr />
        <div class="card shadow mb-3">
            <div class="card-header py-3">
                <p class="text-primary m-0 fw-bold">Datos Medicos del Usuario</p>
                <!--  tipo sangre, alergias, enfermedades -->
            </div>
            <div class="card-body">
                <form>
                    <div class="row">
                        <div class="form-group">
                            <label for="tipoSangre">Tipo de Sangre:</label>
                            <select class="form-control" id="tipoSangre" name="tipoSangre">
                                <option value="A+">A+</option>
                                <option value="A-">A-</option>
                                <option value="B+">B+</option>
                                <option value="B-">B-</option>
                                <option value="AB+">AB+</option>
                                <option value="AB-">AB-</option>
                                <option value="O+">O+</option>
                                <option value="O-">O-</option>
                            </select>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col">
                            <div class="mb-3"><label class="form-label" for="tiposAlergias"><strong>Alergias</strong></label><input class="form-control" type="text" id="tiposAlergias" placeholder="Al Acetaminofen" name="tiposAlergias" disabled></div>
                        </div>
                        <div class="col">
                            <div class="mb-3"><label class="form-label" for="enfermedades"><strong>Enfermedades</strong></label><input class="form-control" type="text" id="enfermedades" placeholder="Gripa" name="enfermedades" disabled></div>
                        </div>
                    </div>
                    <hr />
                    <div class="mb-3"><button class="btn btn-primary btn-sm btn-en-desarrollo" type="submit">Guardar</button></div>
                </form>
            </div>
        </div>
}

