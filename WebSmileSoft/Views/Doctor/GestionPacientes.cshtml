<div class="container mt-4">
    <h1 class="mb-4">Gestión de Pacientes</h1>

    <!-- Barra de búsqueda -->
    <div class="input-group mb-3">
        <input type="text" class="form-control" placeholder="Buscar paciente por nombre o ID">
        <button class="btn btn-primary" type="button">Buscar</button>
    </div>

    <!-- Tabla de pacientes -->
    <table class="table">
        <thead>
            <tr>
                <th>ID</th>
                <th>Nombre</th>
                <th>Apellido</th>
                <th>Teléfono</th>
                <th>Correo Electrónico</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>1</td>
                <td>Juan</td>
                <td>Pérez</td>
                <td>555-123-4567</td>
                <td>juan@example.com</td>
                <td>
                    <button class="btn btn-sm btn-primary">Editar</button>
                    <button class="btn btn-sm btn-danger">Eliminar</button>
                </td>
            </tr>
            <!-- Agrega más filas para otros pacientes -->
        </tbody>
    </table>

    <!-- Botón para agregar un nuevo paciente -->
    <button class="btn btn-success">Agregar Nuevo Paciente</button>
</div>

@section Scripts{
    <script>
    let userRole = sessionStorage.getItem('userRole');
        if (userRole !== '2') {
            logoutUser();
        }
    </script>
}